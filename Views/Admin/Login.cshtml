        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />
            <h1 class="col-md-12 text-center text-primary avatar"><i class="fas fa-user-tie"></i></h1>
            <div class="form-group row justify-content-center">
                
                <div class="col-md-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div> <!--prepend-->
                         <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    </div><!--input-group -->
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div> <!-- Email -->
            </div>
            <div class="form-group row justify-content-center">
                
                <div class="col-md-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-unlock"></i> </div> <!-- prepend text -->

                        </div><!--Prepend -->
                        <input asp-for="Password" class="form-control" placeholder="Enter your password"/>
                    </div> <!--input-group-->
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>
           @*  <div class="form-group row justify-content-center">
                 <label for="" class="col-md-2 col-form-labeel"></label> 
                <div class="col-md-4">
                     <input class="" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </div> 
            </div> *@
            <div class="form-group row justify-content-center">
                @* <label for="" class="col-md-2 col-form-labeel"></label> *@
                <div class="col-md-3">
                    <input type="submit" value="Login" class="btn btn-primary d-block" />
                </div>
                
            </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
