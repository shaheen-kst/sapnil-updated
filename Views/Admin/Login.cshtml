@model Sapnil.Data.LoginVM

@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-md-12">
        <h4 class="text-center pl-5 ">Enter your login info</h4>
    </div>
</div>

<hr />

    
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />
            <div class="form-group row justify-content-center">
                <label asp-for="Email" class="col-md-2 col-form-label"></label>
                <div class="col-md-4">
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="Password" class="col-md-2 col-form-label"></label>
                <div class="col-md-4">
                    <input asp-for="Password" class="form-control" placeholder="Enter your password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row justify-content-center">
                <label for="" class="col-md-2 col-form-labeel"></label>
                <div class="col-md-4">
                     <input class="" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </div> 
            </div>
            <div class="form-group row justify-content-center">
                <label for="" class="col-md-2 col-form-labeel"></label>
                <div class="col-md-4">
                    <input type="submit" value="Login" class="btn btn-primary d-block" />
                </div>
                
            </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
