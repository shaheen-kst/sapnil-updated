@model Sapnil.Data.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<h1></h1>


<div class="row">
    <div class="col-md-12">
            <h4 class="text-center">Register Here</h4>
    </div>
</div>
<hr />

    <div class="justify-content-center">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row justify-content-center">
                <label asp-for="Email" class="col-md-2 col-form-label"></label>
                <div class="col-md-4">
                    <input asp-for="Email" class="form-control" placeholder="example@abc.com"/>
                    <span asp-validation-for="Email" class="text-danger"></span>                   
                </div>
               
            </div> <!--form-row ends -->
            <div class="form-group row justify-content-center">
                <label asp-for="Password" class="col-md-2 col-form-label"></label>
                <div class="col-md-4">
                    <input asp-for="Password" class="form-control" placeholder="At least 6 characters" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="ConfirmPassword" class="col-md-2 col-form-label">Confirm Password</label>
                <div class="col-md-4">
                    <input asp-for="ConfirmPassword" class="form-control"  placeholder="At least 6 characters" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row justify-content-center">
                <label for="" class="col-md-2 col-form-labele"></label>
                <div class="col-md-4">
                    <input type="submit" value="Register" class="btn btn-primary d-block" />
                </div>
            </div>
        </form>
    </div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
